	padding: 0;
	margin: 0;
	box-sizing: border-box;
}
body{
	background: linear-gradient(90deg, rgb(29, 29, 31), rgb(67, 67, 79), rgb(90, 88, 110));
	font-family: Arial, Helvetica, sans-serif;
}
header{
